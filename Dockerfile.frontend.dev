# Development Dockerfile for Vitrin React App
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# Copy package files from frontend
COPY vitrin-frontend/package*.json ./
RUN npm install

# Copy frontend source code
COPY vitrin-frontend/ ./

# Copy shared package
COPY vitrin-shared/ ./vitrin-shared/

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]